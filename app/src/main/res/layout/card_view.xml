<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:id="@+id/cv"
        app:cardBackgroundColor="@color/colorPopup"
        android:clickable="true"
        android:foreground="@drawable/selectable_item_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <workoutapp.tyler.workoutapplication.AutoResizeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_name"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:textSize="30sp"
                android:textColor="@color/whiteText"
                android:paddingRight="125dp"
                android:paddingEnd="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sets"
                android:layout_below="@+id/exercise_name"
                android:textColor="#bdbdbd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reps"
                android:layout_below="@+id/exercise_name"
                android:layout_toRightOf="@+id/sets"
                android:layout_toEndOf="@+id/sets"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="#bdbdbd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/previousWeight"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/whiteText"
                android:textSize="30sp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="-10dp" />

            <Button
                android:text="X"
                android:id="@+id/removeExerciseButton"
                android:background="@color/colorPopup"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="@+id/previousWeight"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="-10dp"
                android:layout_marginRight="-10dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>