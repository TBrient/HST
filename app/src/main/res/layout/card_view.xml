<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/cv"
        app:cardBackgroundColor="@color/colorPopup"
        android:clickable="true"
        android:foreground="@drawable/selectable_item_background"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <workoutapp.tyler.workoutapplication.AutoResizeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_name"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:textSize="30sp"
                android:textColor="@color/whiteText"
                android:paddingRight="125dp"
                android:paddingEnd="100dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingTop="24dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sets"
                android:layout_below="@+id/exercise_name"
                android:textColor="#bdbdbd"
                android:paddingLeft="16dp"
                android:paddingStart="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reps"
                android:layout_below="@+id/exercise_name"
                android:layout_toRightOf="@+id/sets"
                android:layout_toEndOf="@+id/sets"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="#bdbdbd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/previousWeight"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/whiteText"
                android:textSize="30sp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>